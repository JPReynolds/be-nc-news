{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/users/:username": {
    "description": "serves an object of the user specified ",
    "exampleResponse": {
      "user": {
        "username": "jessjelly",
        "avatar_url": "https://s-media-cache-ak0.pinimg.com/564x/39/62/ec/3962eca164e60cf46f979c1f57d4078b.jpg",
        "name": "Jess Jelly"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the article",
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Running a Node App",
        "body": "Text from the article...",
        "votes": 0,
        "topic": "coding",
        "author": "jessjelly",
        "created_at": "2016-08-18T12:07:52.389Z",
        "comment_count": "8"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the articles votes and serves an object of the updated article",
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Running a Node App",
        "body": "Text from the article...",
        "votes": 1,
        "topic": "coding",
        "author": "jessjelly",
        "created_at": "2016-08-18T12:07:52.389Z",
        "comment_count": "8"
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment and serves an object of the new comment",
    "exampleResponse": {
      "comment": {
        "comment_id": 999,
        "author": "jessjelly",
        "article_id": 1,
        "votes": 10,
        "created_at": "2017-07-31T08:14:13.076Z",
        "body": "Comment"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all the comments for specified article",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "comments": {
        "comment_id": 999,
        "author": "jessjelly",
        "article_id": 1,
        "votes": 10,
        "created_at": "2017-07-31T08:14:13.076Z",
        "body": "Comment"
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "updates the comments votes and serves an object with the updated comment",
    "exampleResponse": {
      "comment": {
        "comment_id": 999,
        "author": "jessjelly",
        "article_id": 1,
        "votes": 100,
        "created_at": "2017-07-31T08:14:13.076Z",
        "body": "Comment"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by comment_id",
    "exampleResponse": 204
  }
}
